<div class="container mt-4">
  <h1 class="mt-3 text-center" style="color: brown; text-transform: uppercase;">Hợp Đồng Thuê Trọ</h1>
  <div class="d-flex justify-content-end">
    <a href="/admin/hopdong" class="btn btn-success">Thêm hợp đồng</a>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Phòng</th>
        <th scope="col">Giá</th>
        <th scope="col">Ngày bắt đầu</th>
        <th scope="col">Ngày kết thúc</th>
        <th scope="col">Đặt cọc</th>
        <th scope="col">Trạng thái</th>

        <th scope="col" class="col-3">Hành động </th>
      </tr>
    </thead>
    <tbody>
      {{#each hopdong}}
      <tr>
        <th scope="row">{{showSTT @index}}</th>
        <td>{{this.idRoom.roomNumber}}</td>
        <td>{{this.roomPrice}}</td>
        <td>{{toLocaleString this.startDate}}</td>
        <td>{{toLocaleString this.endDate}}</td>
        <td>{{this.deposit}}</td>
        <td>{{statusContract this.status}}</td>

        <td>
          <a href="/admin/xemhopdong/{{this._id}}" type="button" id="editButton" class="btn btn-primary"
            type="button">Xem</a>
          {{#if this.status}}
          <a href="/admin/edithopdong/{{this._id}}" type="button" id="editButton" class="btn btn-warning"
            type="button">Sửa</a>
          {{/if}}
          <button id="deleteButton" class="btn btn-danger btn-delete" type="submit" data-id="{{this._id}}">Xóa</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{! view }}
<div class="modal fade" id="viewImageModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body text-center">
        <img id="viewImg" src="/uploads/" alt="" class="mb-3" style="width: 100%; height: auto;" />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
      </div>
    </div>
  </div>
</div>
{{! xóa }}
<div id="delete-hopdong-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Bộ bạn muốn xóa lắm à ?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn xóa ?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Xóa</button>
        <button type="button" class="btn btn-danger">Hủy</button>
      </div>
    </div>
  </div>
</div>
{{! delete }}
<form name="hopdongDelete" method="POST" action=""></form>