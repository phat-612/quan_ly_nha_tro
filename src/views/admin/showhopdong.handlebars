<div class="container mt-4"><table class="table">
    <a href="/admin/hopdong" class="btn btn-primary">Thêm hợp đồng</a>
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Phòng</th>
        <th scope="col">Giá</th>
        <th scope="col">Ngày bắt đầu</th>
        <th scope="col">Ngày kết thúc</th>
        <th scope="col">Đặt cọc</th>
      </tr>
    </thead>
    <tbody>
      {{#each hopdong}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.idRoom.roomNumber}}</td>
          <td>{{this.roomPrice}}</td>
          <td>{{toLocaleString this.startDate}}</td>
          <td>{{toLocaleString this.endDate}}</td>
          <td>{{this.deposit}}</td>
          <td>
            <a
              href="/admin/edithopdong/{{this._id}}"
              type="button"
              id="editButton"
              class="btn btn-primary"
              type="button"
            >Sửa</a>
            <button
              id="deleteButton"
              class="btn btn-danger btn-delete"
              type="submit"
              data-id="{{this._id}}"
            >Xóa</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{! xóa }}
<div id="delete-hopdong-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Bộ bạn muốn xóa lắm à ?</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn xóa ?</p>
      </div>
      <div class="modal-footer">
        <button
          id="btn-delete"
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Xóa</button>
        <button type="button" class="btn btn-danger">Hủy</button>
      </div>
    </div>
  </div>
</div>
{{! delete }}
<form name="hopdongDelete" method="POST" action=""></form>