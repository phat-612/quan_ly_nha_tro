<div class="container-xxl ps-4 mt-4">
  <h4 class="mb-3" style="color: brown; text-transform: uppercase;"><a
      href="/admin/quanlykhachthue"
      title="Quay lại trang quản lý"
    ><i class="bi bi-chevron-double-left text-dark me-1"></i></a>
    Xem thông tin khách thuê</h4>
  <hr class="mt-0 mb-4" />
  <div class="row">
    <div class="">
      <!-- Account details card-->
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between">
          <p class="mb-0">Thông tin khách thuê</p>
          <a
            href="/admin/suaThongTinKhach/{{tenant._id}}"
            class="btn btn-success"
            title="Sửa thông tin"
            type="button"
          ><i class="bi bi-wrench"></i></a>
        </div>
        <div class="card-body">
          <form method="post">
            <!-- Form Row-->
            <div class="row gx-3 mb-2">
              <!-- Form Group (fullname)-->
              <div class="col-md-6 mb-2">
                <label class="small mb-1" for="inputFirstName">Họ tên</label>
                <input
                  disabled
                  class="form-control"
                  id="inputFirstName"
                  type="text"
                  placeholder="Nhập họ tên"
                  value="{{tenant.name}}"
                  name="name"
                />
              </div>
              <!-- Form Group (location)-->
              <div class="col-md-6">
                <label class="small mb-1" for="inputLocation">Địa chỉ thường trú</label>
                <input
                  disabled
                  class="form-control"
                  id="inputLocation"
                  type="text"
                  placeholder="Nhập địa chỉ thường trú"
                  value="{{tenant.address}}"
                  name="address"
                />
              </div>
            </div>
            <!-- Form Row-->
            <div class="row gx-3 mb-2">
              <!-- Form Group (email)-->
              <div class="col-md-6 mb-2">
                <label class="small mb-1" for="inputEmailAddress">Email</label>
                <input
                  disabled
                  class="form-control"
                  id="inputEmailAddress"
                  type="email"
                  placeholder="Nhập địa chỉ email"
                  value="{{tenant.email}}"
                  name="email"
                />
              </div>
              <!-- Form Group (phone number)-->
              <div class="col-md-6">
                <label class="small mb-1" for="inputPhone">Số điện thoại</label>
                <input
                  disabled
                  class="form-control"
                  id="inputPhone"
                  type="tel"
                  placeholder="Nhập số điện thoại"
                  value="{{tenant.phone}}"
                  name="phone"
                />
              </div>
            </div>
            <!-- Form Row-->
            <div class="row gx-3 mb-2">
              <!-- Form Group (gender)-->
              <div class="col-md-6 mb-2">
                <label class="small mb-1" for="selectGioiTinh">Giới tính</label>
                <select
                  disabled
                  class="form-select"
                  id="selectGioiTinh"
                  name="gender"
                  aria-label="Default select example"
                >
                  <option value="0" {{isSelected 0 tenant.gender}}>Nam</option>
                  <option value="1" {{isSelected 1 tenant.gender}}>Nữ</option>
                </select>
              </div>
              <!-- Form Group (birthday)-->
              <div class="col-md-6">
                <label class="small mb-1" for="inputBirthday">Ngày sinh</label>
                <input
                  disabled
                  class="form-control"
                  id="inputBirthday"
                  type="date"
                  name="dayOfBirth"
                  value="{{showDate tenant.dayOfBirth}}"
                />
              </div>
            </div>
            <!-- Form Row-->
            <div class="row gx-3 mb-2">
              <!-- Form Group (IDC)-->
              <div class="col-md-6 mb-2">
                <label class="small mb-1" for="inputCCCD">CCCD</label>
                <input
                  disabled
                  class="form-control"
                  id="inputCCCD"
                  type="text"
                  placeholder="Nhập số CCCD"
                  value="{{tenant.cccd.number}}"
                  name="cccdNumber"
                />
              </div>
              <!-- Form Group (cccddate)-->
              <div class="col-md-6">
                <label class="small mb-1" for="inputdateIDC">Ngày cấp</label>
                <input
                  disabled
                  class="form-control"
                  id="inputdateIDC"
                  type="date"
                  value="{{showDate tenant.cccd.date}}"
                  name="cccdDate"
                />
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>