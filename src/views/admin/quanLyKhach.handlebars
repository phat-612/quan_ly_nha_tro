<div class="container text-center">
  <h1 class="mt-3" style="color: brown; text-transform: uppercase;">Quản lý
    khách thuê trọ</h1>
  <a href="/admin/themKhach" class="btn btn-primary my-2 float-end"><i class="bi bi-plus-lg">
    </i>Thêm khách thuê</a>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th scope="col" class="text-center">STT</th>
        <th scope="col">Họ tên</th>
        <th scope="col">Giới tính</th>
        <th scope="col" class="text-center">Số điện thoại</th>
        <th scope="col" class="text-center">CCCD</th>
        <th scope="col" class="text-center">Phòng</th>
        <th scope="col" class="text-center">Hành Động</th>
      </tr>
    </thead>
    <tbody>
      {{#each tenants}}
      <tr>
        <td class="text-center">{{showSTT @index}}</td>
        <td class="text-capitalize">{{name}}</td>
        <td>{{showGioiTinh gender}}</td>
        <td class="text-center">{{phone}}</td>
        <td class="text-center">{{cccd.number}}</td>
        <td class="text-center">{{roomNumbers}}</td>
        <td class="text-center">
          <a href="/admin/xemThongTinKhach/{{_id}}" type="button" title="Xem thông tin chi tiết"
            class="btn btn-outline-dark me-1"><i class="bi bi-eye-fill"></i></a>
          <a href="/admin/suaThongTinKhach/{{_id}}" type="button" title="Sửa thông tin" class="btn btn-success me-1"><i
              class="bi bi-wrench"></i>
          </a>
          <form action="/api/xoaKhachThue/{{_id}}" method="post" class="d-inline-block m-0 formDelete">
            <button type="submit" title="Xóa" class="btn btn-danger me-1">
              <i class="bi bi-trash-fill"></i>
            </button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<script>
  $(".formDelete").on("submit", function (e) {
    let isDelete = confirm("Bạn có chắc chắn muốn xóa không?");
    if (!isDelete) {
      e.preventDefault();
    }
  }) 
</script>