<div class="container">
  <div class="d-flex justify-content-center">
    <h1 class="mt-3" style="color: brown; text-transform: uppercase;">Quản lý phòng trọ</h1>
  </div>
  <nav class="my-4 d-flex flex-row-reverse bd-highlight">
    <button
      type="button"
      class="btn btn-success"
      data-bs-toggle="modal"
      data-bs-target="#modalThem"
    >Thêm Phòng</button>
  </nav>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>STT</th>
        <th scope="col">Số Tầng</th>
        <th scope="col">Số Phòng</th>
        <th scope="col">Giá</th>
        <th scope="col">Diện Tích</th>
        <th scope="col" class="col-2">Tình Trạng</th>
        <th scope="col">Hành Động</th>
      </tr>
    </thead>
    <tbody>
      {{#each rooms}}
        <tr>
          <td>{{showSTT @index}}</td>
          <td>{{this.floor}}</td>
          <td>{{this.roomNumber}}</td>
          <td>{{this.price}} VND</td>
          <td>{{this.area}} m^2</td>
          <td>
            {{showStatusRoom this.isEmpty}}
          </td> 
          <td>
            <button
              type="button"
              class="btn btn-primary btnXemRoom"
              data-bs-toggle="modal"
              data-bs-target="#modalXem"
              data-bs-id="{{this._id}}"
              data-bs-isEmpty="{{this.isEmpty}}"
              data-bs-roomNumber="{{this.roomNumber}}"
              data-bs-floor="{{this.floor}}"
              data-bs-price="{{this.price}}"
              data-bs-area="{{this.area}}"
              data-bs-capacity="{{this.capacity}}"
              data-bs-description="{{this.description}}"
              data-bs-idAmeniti_length="{{this.idAmenities.length}}"
              data-bs-idAmenities="{{this.idAmenities}}"
            ><i class="bi bi-eye-fill"></i></button>
            <button 
              type="button" 
              class="btn btn-warning updateRoomBtn"
              data-bs-toggle="modal"
              data-bs-target="#modalXem"
              data-bs-id="{{this._id}}"
              data-bs-isEmpty="{{this.isEmpty}}"
              data-bs-roomNumber="{{this.roomNumber}}"
              data-bs-floor="{{this.floor}}"
              data-bs-price="{{this.price}}"
              data-bs-area="{{this.area}}"
              data-bs-capacity="{{this.capacity}}"
              data-bs-description="{{this.description}}"
              data-bs-idAmeniti_length="{{this.idAmenities.length}}"
              data-bs-idAmenities="{{this.idAmenities}}"
            ><i
                class="bi bi-wrench"
              ></i></button>
            <button
              class="btn btn-danger"
              type="button"
              data-bs-id="{{this._id}}"
              ><i
                class="bi bi-trash-fill"
              ></i></button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{! modal them phong }}
<div
  class="modal fade"
  id="modalThem"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-xl">
    <form action="/api/themPhong" method="post">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Them phong</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">

          <div class="row">
            <div class="col-6">
              <div class="mb-3">
                <label for="roomNumber" class="col-form-label">Số Phòng :</label>
                <input
                  type="text"
                  class="form-control"
                  id="roomNumber"
                  name="roomNumber"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="floor" class="col-form-label">Số Tầng :</label>
                <select
                  class="form-select"
                  aria-label="Default select example"
                  name="floor"
                  required
                >
                  <option value="Trệt">Trệt</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="" class="col-form-label">Diện Tích :</label>
                <input type="number" class="form-control" id="" name="area" required />
              </div>
              <div class="mb-3">
                <label for="" class="col-form-label">Số Người Tối Đa :</label>
                <input
                  type="number"
                  class="form-control"
                  id=""
                  name="capacity"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="price" class="col-form-label">Giá :</label>
                <input
                  type="text"
                  class="form-control"
                  id="price"
                  name="price"
                  required
                />
              </div>
            </div>
            <div class="col-6">
              <div class="mb-3">
                <label for="" class="col-form-label">Mô Tả :</label>
                <textarea
                  class="form-control"
                  id="exampleFormControlTextarea1"
                  rows="3"
                  name="description"
                ></textarea>
              </div>
              <div class="mb-3">
                <label for="" class="col-form-label">Tiện Ích :</label>
                <div class="row">
                  {{#each amenities}}
                    <div class="form-check col-4 my-1">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        value="{{this._id}}"
                        id="{{this.name}}"
                        name="idAmenities"
                      />
                      <label class="form-check-label" for="{{this.name}}">
                        {{this.name}}
                      </label>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Them</button>
        </div>
      </div>
    </form>
  </div>
</div>

{{! modal xem chi tiet phong }}

<div
  class="modal fade"
  id="modalXem"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title titleXCT" id="exampleModalLabel">Xem Chi Tiết</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form action="/api/updatePhong" method="post" >
          <input type="text" hidden class="hiddenInpId" value="" name="id">
          <div class="row">
            <div class="col-6">
              <div class="mb-3">
                <label for="" class="col-form-label">Số Phòng :</label>
                <input type="text" class="form-control inpXemroomNumber" disabled="disabled" name="roomNumber" required />
              </div>
              <div class="mb-3">
                <label for="floor" class="col-form-label">Số Tầng :</label>
                <select
                  class="form-select inpXemfloor"
                  aria-label="Default select example"
                  name="floor"
                  disabled="disabled"
                  required
                >
                  <option value="Trệt">Trệt</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="" class="col-form-label">Diện Tích :</label>
                <input type="text" class="form-control inpXemarea" disabled="disabled" name="area" required />
              </div>
              <div class="mb-3">
                <label for="" class="col-form-label">Số Người Tối Đa :</label>
                <input
                  type="number"
                  class="form-control inpXemcapacity"
                  disabled="disabled"
                  name="capacity"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="" class="col-form-label">Giá :</label>
                <input type="text" class="form-control inpXemprice" disabled="disabled" name="price" required />
              </div>
            </div>
            <div class="col-6">
              <div class="mb-3">
                <label for="" class="col-form-label">Trạng Thái :</label>
                <p class="form-control inpXemisEmpty"></p>
              </div>
              <div class="mb-3">
                <label for="" class="col-form-label">Mô tả :</label>
                <textarea
                  class="form-control inpXemdescription"
                  id="exampleFormControlTextarea1"
                  rows="3"
                  disabled="disabled"
                  name="description"
                ></textarea>
              </div>
              <div class="mb-3">
                <label for="{{this._id}}" class="col-form-label">Tiện Ích :</label>
                <div class="row">
                  {{#each amenities}}
                    <div class="form-check col-4 my-1">
                      <input
                        class="form-check-input checkboxAmeniti"
                        type="checkbox"
                        value="{{this._id}}"
                        id="{{this._id}}"
                        name="idAmenities"
                        disabled
                      />
                      <label class="form-check-label" for="{{this.name}}">
                        {{this.name}}
                      </label>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success updateBtninModal">Sửa</button>
        <button type="submit" class="btn btn-success updateRoomBtninModal" hidden >Sửa</button>
        <button type="submit" class="btn btn-success saveBtninModal" hidden >Lưu</button>
        <button type="button" class="btn btn-danger cancelBtninModal" hidden >Hủy</button>
      </div>
      </form>
    </div>
  </div>
</div>     